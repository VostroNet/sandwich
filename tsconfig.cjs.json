{
  
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "lib/cjs",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": false,
    "strict": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@types/node"
    ],
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true
  },

  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**",
    "src/examples/**",
    "lib/**",
  ]
}

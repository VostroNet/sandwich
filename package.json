{
  "name": "@vostro/sandwich",
  "version": "0.3.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "postpublish": "yalc restore --all && pnpm install",
    "test": "jest",
    "prepublishOnly": "pnpm run build; echo next; yalc retreat --all",
    "build": "rm -Rf ./lib || true; run-p build:*",
    "build:main": "swc src --out-dir lib --strip-leading-paths -s",
    "build:types": "tsc -p tsconfig.types.json",
    "build:copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib"
  },
  "files": [
    "src/**/*",
    "lib/**/*",
    "!**/*.test.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.18",
    "@types/debug": "^4.1.10",
    "@types/node": "^20.10.5",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "npm-run-all2": "^6.2.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "deepmerge": "^4.3.1",
    "is-plain-object": "^5.0.0",
    "uuid": "^9.0.1"
  }
}
